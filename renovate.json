{
    "extends": [
        "config:base",
        ":timezone(Asia/Tokyo)"
    ],
    "labels": [
        "dependencies",
        "renovate"
    ],
    "dependencyDashboard": true,
    "pin": {
        "automerge": true
    },
    "npm": {
        "rangeStrategy": "bump"
    },
    "schedule": "every weekend",
    "packageRules": [
        {
            "packagePatterns": [
                "^@types/"
            ],
            "automerge": true,
            "major": {
                "automerge": false
            }
        }
    ]
}
